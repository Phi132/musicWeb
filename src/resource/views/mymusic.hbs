                    </div>
                    <div class="profile_cnt_actions">
                        <div class="buy-vip-action">
                            mua vip ngay
                        </div>
                        <div class="receive-vip">
                            nhap code vip
                        </div>
                        <div class="log-out" data-toggle="tooltip" data-placement="top" title="Đăng Xuất">
                            <i class="fas fa-sign-out-alt"></i>
                        </div>

                    </div>
                </div>
            </div>

            <nav class="user_profile_navbar">
                <div class="profile_navbar_music">
                    <div class="navbar_menu">
                        <li class="pro_nav_menu_item active">
                            <div class="nav_item">
                                <a href="/mymusic/">
                                    <div class="nav_item-link">
                                        tổng quan
                                    </div>
                                </a>
                            </div>
                        </li>
                        <li class="pro_nav_menu_item">
                            <div class="nav_item">
                                <a href="/mymusic/libary/song">
                                    <div class="nav_item-link">
                                        bài hát
                                    </div>
                                </a>

                            </div>
                        </li>
                        <li class="pro_nav_menu_item">
                            <div class="nav_item">
                                <div class="nav_item-link">
                                    playlist
                                </div>
                            </div>
                        </li>
                        <li class="pro_nav_menu_item">
                            <div class="nav_item">
                                <div class="nav_item-link">
                                    nghệ sĩ
                                </div>
                            </div>
                        </li>
                        <li class="pro_nav_menu_item">
                            <div class="nav_item">
                                <div class="nav_item-link">
                                    album
                                </div>
                            </div>
                        </li>
                        <li class="pro_nav_menu_item">
                            <div class="nav_item">
                                <div class="nav_item-link">
                                    mv
                                </div>
                            </div>
                        </li>
                        <li class="pro_nav_menu_item">
                            <div class="nav_item">
                                <div class="nav_item-link">
                                    tải lên
                                </div>
